<wndw:BaseKeyboardView x:Class="Dhgms.Whipstaff.Desktop.View.Wndw.KeyboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:wndw="clr-namespace:Dhgms.Whipstaff.Desktop.View.Wndw"
                 Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox Name="KeyboardMappings">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" IsItemsHost="True">
                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</wndw:BaseKeyboardView>
